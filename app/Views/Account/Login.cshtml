<script>
$(function() {
    $('#login-form-link').click(function(e) {
    $('#register-form-link').removeClass('active');

    $('#register-form').addClass('form-no-display');
    $('#register-form').removeClass('form-display');

    $('#login-form').removeClass('form-no-display');
    $('#login-form').addClass('form-display');
  
    $(this).addClass('active');
    e.preventDefault();
  });
    $('#register-form-link').click(function (e) {
      $('#login-form-link').removeClass('active');

      $('#login-form').addClass('form-no-display');
      $('#login-form').removeClass('form-display');

      $('#register-form').removeClass('form-no-display');
      $('#register-form').addClass('form-display');

      $(this).addClass('active');
    e.preventDefault();
	});
});
</script>